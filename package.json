{
  "name": "reactuse",
  "version": "0.0.90",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint-staged": "lint-staged",
    "prepublishOnly": "pnpm type && pnpm unit-test run && pnpm build",
    "prepare": "husky",
    "unit-test": "pnpm --filter @siberiacancode/reactuse run unit-test",
    "cli:build": "pnpm --filter @siberiacancode/cli build && pnpm --filter @siberiacancode/cli generate-registry",
    "docs:build": "pnpm --filter @siberiacancode/docs build"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
