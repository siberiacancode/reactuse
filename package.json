{
  "name": "@siberiacancode/reactuse",
  "version": "0.0.45",
  "description": "Ultimate tool",
  "license": "MIT",
  "author": {
    "name": "SIBERIA CAN CODE ðŸ§Š",
    "url": "https://github.com/siberiacancode"
  },
  "contributors": [
    {
      "name": "Dmitry Babin",
      "url": "https://github.com/debabin"
    }
  ],
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/siberiacancode/reactuse.git"
  },
  "homepage": "https://github.com/siberiacancode/reactuse",
  "bugs": "https://github.com/siberiacancode/reactuse/issues",
  "files": [
    "dist/**/*"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepublishOnly": "yarn type && yarn unit-test run && yarn build",
    "build": "shx rm -rf dist && rollup -c --bundleConfigAsCjs",
    "lint": "eslint . --ext ts --ext tsx --no-error-on-unmatched-pattern --fix",
    "format": "prettier --write **/*.{ts,jsm,md}",
    "type": "tsc --noEmit",
    "pretty": "yarn type && yarn format && yarn lint",
    "prepare": "husky install",
    "unit-test": "vitest",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "lint-staged": {
    "*.js": "prettier --write",
    "*.ts": [
      "prettier --write",
      "eslint --no-error-on-unmatched-pattern --fix"
    ]
  },
  "peerDependencies": {
    "@types/react": "^18.0.0",
    "react": "^17.0.2 || ^18.0.0",
    "react-dom": "^17.0.2 || ^18.0.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "dependencies": {
    "screenfull": "^6.0.2"
  },
  "devDependencies": {
    "@siberiacancode/builder": "^1.3.0",
    "@siberiacancode/eslint": "^1.1.0",
    "@siberiacancode/prettier": "^1.1.0",
    "@siberiacancode/vitest": "^1.2.3",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.7",
    "@types/doctrine": "^0.0.9",
    "@types/node": "^20.11.19",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "comment-parser": "^1.4.1",
    "core-js": "^3.37.1",
    "doctrine": "^3.0.0",
    "eslint": "^8.56.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "markdown-table": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "shx": "^0.3.4",
    "typescript": "^5.3.3",
    "vite": "^5.1.3",
    "vitepress": "^1.1.4"
  },
  "keywords": [
    "react",
    "react hooks",
    "react use",
    "use",
    "hooks"
  ]
}
